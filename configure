#!/bin/sh

usage() {
  echo "Usage: $0 [OPTION]"
  echo
  echo "Configuration:"
  echo "  --help                 display this help and exit"
  echo "  --with-pgport=NUM      access PostgreSQL server on TCP port NUM"
}

PGPORT=5432

while test -n "$1"; do
  case "$1" in
    --help|-h)
      usage
      exit 0
      ;;
    --with-pgport=*)
      PGPORT=`echo "$1" | cut -d= -f2`
      ;;
    *)
      echo "Unknown option '$1'" >&2
      usage >&2
      exit 1
  esac
  shift
done

echo "PGPORT: $PGPORT"

sed "s/\( *module.exports.db_port[ \t]*= *'\?\)[^';]*\('\?;\)/\1$PGPORT\2/" < config/environments/test.js.example > config/environments/test.js
